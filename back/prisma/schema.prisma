datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  requests  Request[]
  createdAt DateTime  @default(now())
}

model Request {
  id            Int      @id @default(autoincrement())
  method        String
  url           String
  statusCode    Int
  response      String   
  responseHeaders Json? 
  duration      Int
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
  createdAt     DateTime @default(now())
}